{
    "languageserver": {
        "svls": {
            "command": "svls",
            "filetypes": ["systemverilog"]
        },
        "clangd": {
            "command": "clangd",
            "trace.server": "verbose",
            "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".git/", ".hg/"],
            "filetypes": ["c", "cpp", "objc", "objcpp"]
        }
    },
    "suggest.noselect": false,

    "snippets.userSnippetsDirectory": "~/.config/nvim/personalize-config/mysnippets",


    "coc.preferences.formatOnSaveFiletypes": [
        "javascript",
        "typescript",
        "python",
        "typescriptreact",
        "json",
        "javascriptreact",
        "typescript.tsx",
        "graphql"
    ]
}
